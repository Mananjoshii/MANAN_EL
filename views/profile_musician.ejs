<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>User Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="/profile_musician.css">
</head>

<body>
  <!-- Header Section -->
  <header class="p-3 mb-3 border-bottom" style="background-color: black; color: white; height: au;">
    <div class="container">
      <span class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start" >
        <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
          <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap">
            <use xlink:href="#bootstrap"></use>
          </svg>
          <img src="/SEMITONE_LOGO.gif" alt="MusicHub Logo" width="200">
        </a>
      </div>
    </span>
    <a href="/logout" class="btn btn-danger" style="margin-left: 93%;">Logout</a>
  </header>
  

  <!-- Dashboard Section -->
  <div class="dashboard-container container">
    <div class="row">
      <!-- Profile Section -->
      <div class="col-lg-3 col-md-4 mb-4">
        <div class="card text-center">
          <div class="card-body">
            <img src="/uploads/images/<%= user.profile_picture %>" alt="Profile Picture" class="img-thumbnail mb-3">
            <h5 class="card-title">
              <%= user.name %>
            </h5>
            <p class="text-muted mb-3">Musician | Guitarist</p>
          </div>
        </div>
      </div>

      <!-- Main Content Section -->
      <div class="col-lg-6 col-md-8">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">User Information:</h5>
            <ul class="list-group list-group-flush">
              <li class="list-group-item"> <strong>Email:</strong>
                <%= user.email %>
              </li>
              <!-- <li class="list-group-item"><strong>Social Media Links:</strong>
                <a href="https://www.instagram.com"><img src="Instagram.png" style="height: 20px;" alt=""></a>
                <a href="https://www.facebook.com"><img src="downloadfb.png" style="height: 20px;" >
              </li  class="list-group-item">
              </li> -->
            </ul>
          </div>
        </div>
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Professional Details:</h5>

            <ul class="professional details">
              <%= user.description %>
                </li>
            </ul>

          </div>
        </div>
      </div>


    </div>
    <section class="container my-4">
      <h2 class="mb-4">User Posts</h2>
      <div class="row g-3">
        <!-- Post 1 -->
        <div class="col-md-4">
          <div class="card">
            <video src="/uploads/videos/<%=user.video%>" controls></video>
            <div class="card-body">
              <h5 class="card-title">Acoustic Vibes</h5>
              <p class="card-text">A soothing new track with a mix of relaxing melodies and acoustic guitar.</p>
            </div>
          </div>
        </div>

        <!-- Post 2 -->
        <div class="col-md-4">
          <div class="card">
            <video src="/uploads/videos/<%=user.video%>" controls></video>
            <div class="card-body">
              <h5 class="card-title">Rock On!</h5>
              <p class="card-text">Exploring some classic rock vibes with the band. Join the jam session!</p>
            </div>
          </div>
        </div>

        <!-- Post 3 -->
        <div class="col-md-4">
          <div class="card">
            <video src="/uploads/videos/<%=user.video%>" controls></video>
            <div class="card-body">
              <h5 class="card-title">Jazz Nights</h5>
              <p class="card-text">Sharing my latest performance from the jazz club. Check it out!</p>
            </div>
          </div>
        </div>
      </div>
    </section>
    <div class="container">
      <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
        <div class="col-md-4 d-flex align-items-center">
          <a href="/" class="mb-3 me-2 mb-md-0 text-body-secondary text-decoration-none lh-1">
            <svg class="bi" width="30" height="24">
              <use xlink:href="#bootstrap"></use>
            </svg>
          </a>
          <span class="mb-3 mb-md-0 text-body-secondary">Â© 2024 Company, Inc</span>
        </div>

        <ul class="nav col-md-4 justify-content-end list-unstyled d-flex">
          <li class="ms-3"><a class="text-body-secondary" href="#"><svg class="bi" width="24" height="24">
                <use xlink:href="#twitter"></use>
              </svg></a></li>
          <li class="ms-3"><a class="text-body-secondary" href="#"><svg class="bi" width="24" height="24">
                <use xlink:href="#instagram"></use>
              </svg></a></li>
          <li class="ms-3"><a class="text-body-secondary" href="#"><svg class="bi" width="24" height="24">
                <use xlink:href="#facebook"></use>
              </svg></a></li>
        </ul>
      </footer>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"></script>
</body>

</html>